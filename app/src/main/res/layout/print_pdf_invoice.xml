<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Company Info -->
        <TextView
            android:id="@+id/ShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RAGA PVT LTD"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="S USMAN ROAD, T. NAGAR,\nCHENNAI, TAMIL NADU.\nPHONE : 044 25863622\n"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GSTIN : 33AAAGP0685F1ZH"
            android:textColor="#000000"
            android:textSize="12sp" />
        <!-- Retail Invoice -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Retail Invoice"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Date -->
        <TextView
            android:id="@+id/DateAndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Date: 23/03/2020, 04:57 PM"
            android:textColor="#000000"
            android:textSize="12sp" />


        <!-- Divider -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="------------------------------------------------------------------------------------------------------"
            android:textColor="#888888" />

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Item Name"
                android:textColor="@color/colorOnPrimary"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="MRP"
                android:paddingEnd="10.dp"
                android:textColor="@color/colorOnPrimary"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Discount%"
                android:textColor="@color/colorOnPrimary"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Quantity"
                android:textColor="@color/colorOnPrimary"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Final Amt"
                android:textColor="@color/colorOnPrimary"
                android:textSize="10dp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Item Rows -->
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/itemList"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           />


        <!-- Subtotal -->
        <TextView
            android:id="@+id/subTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="end"
            android:text="Sub Total          2       760.00"
            android:textColor="#000000" />

        <!-- Discount -->
        <TextView
            android:id="@+id/discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="end"
            android:text="(-) Discount             26.00"
            android:textColor="#000000" />


              <!-- Divider -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="--------------------------------------------------------------------------------"
            android:textColor="#888888" />

        <!-- TOTAL -->
        <TextView
            android:id="@+id/grandTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="end"
            android:text="TOTAL                Rs 811.00"
            android:textColor="#000000"
            android:textStyle="bold" />

        <!-- Cash -->


        <!-- Cash Tendered -->


        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Copyright@BillGenerator"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>
</ScrollView>
