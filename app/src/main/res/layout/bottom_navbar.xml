<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageButton
            android:id="@+id/itemOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:src="@drawable/homeicon"
            app:layout_constraintEnd_toStartOf="@id/itemTwo"
            android:backgroundTint="@android:color/transparent"
            />
    <ImageButton
                android:id="@+id/itemTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                app:layout_constraintStart_toEndOf="@id/itemOne"
                app:layout_constraintTop_toTopOf="@id/itemOne"
                app:layout_constraintBottom_toBottomOf="@id/itemOne"
                app:layout_constraintEnd_toStartOf="@id/NewOrderbtn"
                android:gravity="center"
                android:src="@drawable/clienticon"
                android:backgroundTint="@android:color/transparent"
                />
    <ImageButton
        android:id="@+id/itemthree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@id/itemFour"
        app:layout_constraintTop_toTopOf="@id/itemFour"
        app:layout_constraintBottom_toBottomOf="@id/itemFour"
        app:layout_constraintStart_toEndOf="@id/NewOrderbtn"
        android:src="@drawable/itemsicon"
        android:backgroundTint="@android:color/transparent"
        />
    <ImageButton
        android:id="@+id/itemFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/settingicon"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemthree"

        />


        <ImageButton
            android:id="@+id/NewOrderbtn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/primaryColor"
            android:contentDescription="FloatingButton"
            android:src="@drawable/inovice_icon"
            android:background="@drawable/circle_shape"
            android:elevation="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />



</androidx.constraintlayout.widget.ConstraintLayout>